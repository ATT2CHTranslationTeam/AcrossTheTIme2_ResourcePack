{
    "multipart": [
        {   "apply": { "model": "block/custom/shield_post" }},
        {   "when": { "north": true },
            "apply": { "model": "block/custom/shield_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "block/custom/shield_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "block/custom/shield_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "block/custom/shield_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "block/custom/shield_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "block/custom/shield_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "block/custom/shield_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "block/custom/shield_noside", "y": 270 }
        }
    ]
}
